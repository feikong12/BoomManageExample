<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="285.0" prefWidth="420.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="BookManageSystem.controller.SoftInformationFrameController">
    <VBox alignment="CENTER" prefHeight="285" prefWidth="420">
        <HBox alignment="CENTER" prefHeight="251" prefWidth="420">
            <ImageView fx:id="imageView" cacheHint="SPEED" depthTest="ENABLE" fitHeight="150" fitWidth="200" pickOnBounds="true" preserveRatio="true" />
            <VBox alignment="TOP_CENTER" prefHeight="170" prefWidth="400.0" spacing="10">
                <Label text="图书管理系统">
                    <font>
                        <Font name="System Bold" size="32" />
                    </font>
                </Label>
                <Label text="版本 1.0">
                    <font>
                        <Font size="28" />
                    </font>
                </Label>
                <Hyperlink fx:id="hyperlink" alignment="CENTER" focusTraversable="false" onAction="#hyperlinkEvent" text="相关Github连接" textAlignment="CENTER" textOverrun="CLIP" underline="true">
                    <font>
                        <Font size="21.0" />
                    </font>
                </Hyperlink>
                <HBox alignment="CENTER_RIGHT" prefHeight="100" prefWidth="200">
                    <Button fx:id="closeButton" mnemonicParsing="false" onAction="#closeButtonEvent" text="关闭">
                        <font>
                            <Font size="20" />
                        </font>
                        <HBox.margin>
                            <Insets />
                        </HBox.margin>
                    </Button>
                    <padding>
                        <Insets right="60.0" />
                    </padding>
                </HBox>
            </VBox>
        </HBox>
    </VBox>
</AnchorPane>
