<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="750.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="BookManageSystem.controller.MainFrameController">
    <MenuBar prefHeight="37.0" prefWidth="800.0">
        <menus>
            <Menu mnemonicParsing="false" text="图书类别管理">
                <items>
                    <MenuItem fx:id="bookTypeAddMenuItem" mnemonicParsing="false" onAction="#bookTypeAddMenuItemEvent" text="添加图书类别" />
                    <MenuItem fx:id="bookTypeManageMenuItem" mnemonicParsing="false" onAction="#bookTypeManageMenuItemEvent" text="维护图书类别" />
                </items>
            </Menu>
            <Menu mnemonicParsing="false" text="图书管理">
                <items>
                    <MenuItem fx:id="bookAddMenuItem" mnemonicParsing="false" onAction="#bookAddMenuItemEvent" text="添加图书" />
                    <MenuItem fx:id="bookManageMenuItem" mnemonicParsing="false" onAction="#bookManageMenuItemEvent" text="维护图书" />
                </items>
            </Menu>
            <Menu mnemonicParsing="false" text="其他">
                <items>
                    <MenuItem fx:id="exitSoftMenuItem" mnemonicParsing="false" onAction="#exitSoftMenuItemEvent" text="退出软件" />
                    <MenuItem fx:id="aboutSoftMenuItem" mnemonicParsing="false" onAction="#aboutSoftMenuItem" text="关于软件" />
                </items>
            </Menu>
        </menus>
    </MenuBar>
    <AnchorPane fx:id="mainFrameAnchorPane" layoutY="37" prefHeight="663" prefWidth="800">
        <HBox alignment="CENTER" prefHeight="663" prefWidth="800">
            <ImageView fx:id="mainBookManageImageView" fitHeight="513.0" fitWidth="611.0" pickOnBounds="true" preserveRatio="true">
                <image>
                </image>
            </ImageView>
        </HBox>
    </AnchorPane>
</AnchorPane>
