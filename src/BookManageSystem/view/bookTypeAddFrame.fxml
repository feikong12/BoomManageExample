<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="BookManageSystem.controller.BookTypeAddFrameController">
    <VBox alignment="TOP_CENTER" prefHeight="700" prefWidth="800" spacing="30">
        <HBox alignment="CENTER" prefHeight="130" prefWidth="800">
            <Label alignment="CENTER" prefHeight="53" prefWidth="322" text="图书类别添加">
                <font>
                    <Font name="System Bold" size="40.0" />
                </font>
            </Label>
        </HBox>
        <HBox alignment="CENTER" prefHeight="100" prefWidth="200" spacing="15">
            <Label text="图书类别名称：">
                <font>
                    <Font size="15" />
                </font>
            </Label>
            <TextField fx:id="bookTypeNameTextField" prefWidth="200">
                <font>
                    <Font size="15.0" />
                </font>
            </TextField>
        </HBox>
        <HBox alignment="TOP_CENTER" prefHeight="144.0" prefWidth="600" spacing="15">
            <Label text="图书类别描述：">
                <font>
                    <Font size="15" />
                </font>
                <HBox.margin>
                    <Insets top="30.0" />
                </HBox.margin>
            </Label>
            <TextArea fx:id="bookTypeDescriptionTextArea" prefHeight="200" prefWidth="200" wrapText="true">
                <font>
                    <Font size="15.0" />
                </font>
            </TextArea>
        </HBox>
        <HBox alignment="CENTER" prefHeight="100" prefWidth="300" spacing="120.0">
            <Button fx:id="addButton" mnemonicParsing="false" onAction="#addButtonEvent" text="添加">
                <font>
                    <Font size="18.0" />
                </font>
            </Button>
            <Button fx:id="resetButton" mnemonicParsing="false" onAction="#resetButtonEvent" text="重置">
                <font>
                    <Font size="18.0" />
                </font>
            </Button>
        </HBox>
    </VBox>
</AnchorPane>
